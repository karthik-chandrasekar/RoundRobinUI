<h1 align="Center">Categories</h1>

<%= form_for :articles, method: "get", url: articles_add_category_path do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_area :title %>
    </p>

    <p>
        <%= f.submit :value => 'Add Category' %>
    </p>

<% end %>

<%= link_to 'Back', new_article_path %>
<%= link_to 'Category List', articles_category_list_path %>


